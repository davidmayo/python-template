repos:
    - repo: https://github.com/astral-sh/ruff-pre-commit
      rev: v0.14.0
      hooks:
          # NOTE: ruff-check should be before ruff-format so that it can fix semantic issues
          # before ruff-format does its thing. Specifically, this helps with import sorting.
          - id: ruff-check
            args: [--fix, --exit-non-zero-on-fix]
          - id: ruff-format
            args: [--exit-non-zero-on-fix]
